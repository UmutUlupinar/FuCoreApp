@model CategoryDto
@{
    ViewData["Title"] = "Create";
}

<h1>Api'den kategori ekleme</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="CategoryApi" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Kategori ismi : </label>
                <input asp-for="Name"  class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-3 float-end">
                <input type="submit" value="ekle" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>


