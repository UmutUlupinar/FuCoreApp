@model ProductDto
@{
    ViewData["Title"] = "Update";
}

<h1>Güncelle Ürün</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Ürün ismi : </label>
                <input asp-for="Name" class="form-control" />
                <label asp-for="Stock">Ürün stoğu : </label>
                <input asp-for="Stock" class="form-control" />
                <label asp-for="Price">Ürün ücret : </label>
                <input asp-for="Price" class="form-control" />
                <label asp-for="CategoryId"> kategori : </label>
                <input asp-for="CategoryId" class="form-control" />

                <span asp-validation-for="Name" class="text-danger"></span>
                <span asp-validation-for="Stock" class="text-danger"></span>
                <span asp-validation-for="Price" class="text-danger"></span>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-3 float-end">
                <input type="submit" value="güncelle" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

